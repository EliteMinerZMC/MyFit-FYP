<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.joshuamiddletonfyp.myfitandroidfitnesspackage.Registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_first_name_edit"
        android:layout_alignStart="@+id/text_first_name"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:id="@+id/text_first_name"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_text"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="18dp"
            android:paddingEnd="30dp"
            android:width="120dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_last_name_edit"
            android:background="@drawable/border_text"
            android:layout_alignTop="@+id/text_last_name"
            android:layout_alignStart="@+id/register_first_name_edit"
            android:layout_alignBottom="@+id/text_last_name"
            android:layout_alignEnd="@+id/register_first_name_edit" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_first_name_edit"
            android:background="@drawable/border_text"
            android:layout_marginRight="8dp"
            android:layout_above="@+id/text_last_name"
            android:layout_alignTop="@+id/text_first_name"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/text_first_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:id="@+id/text_last_name"
            android:background="@drawable/border_text"
            android:layout_below="@+id/text_first_name"
            android:layout_alignStart="@+id/text_first_name"
            android:layout_alignEnd="@+id/text_first_name"
            android:layout_marginTop="8dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_agel_edit"
            android:background="@drawable/border_text"
            android:layout_alignTop="@+id/text_age"
            android:layout_alignStart="@+id/register_last_name_edit"
            android:layout_alignBottom="@+id/text_age"
            android:layout_alignEnd="@+id/register_last_name_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:id="@+id/text_age"
            android:background="@drawable/border_text"
            android:layout_below="@+id/text_last_name"
            android:layout_alignStart="@+id/text_last_name"
            android:layout_alignEnd="@+id/text_last_name"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter User Information"
            android:id="@+id/textView4"
            android:layout_above="@+id/register_first_name_edit"
            android:layout_alignStart="@+id/text_first_name"
            android:layout_alignEnd="@+id/register_first_name_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/text_email"
            android:background="@drawable/border_text"
            android:layout_below="@+id/text_age"
            android:layout_alignStart="@+id/text_age"
            android:layout_alignEnd="@+id/text_age"
            android:layout_marginTop="8dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_email_edit"
            android:background="@drawable/border_text"
            android:layout_alignTop="@+id/text_email"
            android:layout_alignEnd="@+id/register_agel_edit"
            android:layout_alignStart="@+id/register_agel_edit"
            android:layout_alignBottom="@+id/text_email" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:id="@+id/test_username"
            android:background="@drawable/border_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="68dp"
            android:width="110dp"
            android:layout_marginRight="8dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_user_edit"
            android:background="@drawable/border_text"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@+id/test_username"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/test_username"
            android:layout_alignBottom="@+id/test_username" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/text_password"
            android:background="@drawable/border_text"
            android:layout_below="@+id/test_username"
            android:layout_alignStart="@+id/test_username"
            android:layout_alignEnd="@+id/test_username"
            android:layout_marginTop="8dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_password"
            android:background="@drawable/border_text"
            android:inputType="textPassword"
            android:layout_alignTop="@+id/text_password"
            android:layout_alignStart="@+id/register_user_edit"
            android:layout_alignEnd="@+id/register_user_edit"
            android:layout_alignBottom="@+id/text_password" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"
            android:id="@+id/showPassword"
            android:checked="false"
            android:layout_alignTop="@+id/register_password"
            android:layout_alignStart="@+id/register_password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create User Login:"
            android:id="@+id/textView3"
            android:layout_above="@+id/register_user_edit"
            android:layout_alignStart="@+id/test_username"
            android:layout_alignEnd="@+id/register_user_edit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/register_button_r"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/register_password" />

    </RelativeLayout>

</RelativeLayout>
