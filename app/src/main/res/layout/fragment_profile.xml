<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joshuamiddletonfyp.myfitandroidfitnesspackage.UIFragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:background="#349dfa"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="178dp"
                android:layout_height="185dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="#349dfa">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username-login"
                android:layout_row="1"
                android:layout_column="6"
                android:editable="true"
                android:hint="Enter Username"
                android:enabled="true"
                android:background="@drawable/border_text"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_above="@+id/password-login"
                android:layout_alignStart="@+id/password-login"
                android:layout_alignEnd="@+id/password-login" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password-login"
                android:layout_row="2"
                android:layout_column="6"
                android:enabled="true"
                android:editable="true"
                android:background="@drawable/border_text"
                android:password="true"
                android:hint="EnterPassword"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/login-button"
                android:layout_below="@+id/password-login"
                android:layout_alignStart="@+id/password-login"
                android:layout_alignEnd="@+id/password-login"
                android:layout_marginTop="10dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/register-button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="#0000"
                android:layout_marginLeft="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/reset-password"
                android:background="#0000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
