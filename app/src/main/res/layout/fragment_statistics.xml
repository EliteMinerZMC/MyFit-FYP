<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joshuamiddletonfyp.myfitandroidfitnesspackage.UIFragments.StatisticsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="3">

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Fitness Statistics"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="My Goal: Walk For 100 Minutes:"
            android:id="@+id/goalText"
            android:layout_row="2"
            android:layout_column="0"
            android:autoText="false"
            android:textSize="8dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goalcircle"
            android:layout_row="3"
            android:layout_column="0"
            android:progress="70"
            android:max="100"
            android:indeterminate="false"
            android:layout_below="@+id/goalText"
            android:layout_alignParentStart="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goalbar"
            android:layout_row="3"
            android:layout_column="1"
            android:max="100"
            android:progress="70"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/goalcircle"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/goalText" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:layout_gravity="center_horizontal|bottom"
        android:weightSum="1"
        android:id="@+id/graphHolder">

    </LinearLayout>
</FrameLayout>
